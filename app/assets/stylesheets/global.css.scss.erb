body {
	color: #666;
	font-family: Helvetica, Arial, sans-serif;
	padding-bottom: 50px;
}
a, a:link {
	color: #0098cc;
}
a:hover {
	text-decoration: none;
}
h1, h2, h3, h4 {
	font-weight: normal;
}
ul {
	margin-left: 0;
	padding-left: 0;
}
.container {
	padding-left: 100px;
	padding-right: 100px;
}


h4 {
	margin: 0;
	display: inline-block;
	line-height: 49px;
}
h4:before {
	content: "";
	background-image: image-url('anne-hathaway.jpg');
	width: 49px;
	height: 49px;
	border-radius: 25px;
	float: left;
	margin-right: 15px;
	
}
hr {
	border: 0;
	background-color: #999;
	height: 1px;
}
.header-nav {
	float: right;
}
.header-nav ul {
	margin-bottom: 0;
	height: 40px;
	line-height: 40px;
}
.header-nav li {
	list-style-type: none;
	display: inline-block;
	margin-left: 15px;
}
.header-content {
	padding: 15px 25px;
}

.padded-content {
	padding: 20px 25px;
}
h1 {
	margin-left: 25px;
}

.button {
	padding: 5px 15px;
	background-color: #888;
	color: #fff;
	border: none;
}

.active {
	font-weight: bold;
}