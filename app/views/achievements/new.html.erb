<h2>Create a new achievement</h2>


<!-- simple form sucks!  -->
<%= simple_form_for @achievement do |f| %>
	<%= f.input :title, label: 'Achievement' %>
	<%= f.input :title, label: 'Job Title' %>
	<%= f.input :name, label: 'Company' %>

	<%= f.association :position, :input_html => {:class => "fillmein"}, label: "Associated Job" %>
	<%= f.input :description, :input_html => {:rows => 5, :class => "fillmein" } %>
	<p>
		<%= f.file_field :photo %>
	</p>	
	<%= f.submit class: 'btn btn-primary' %>
<!-- 	<%= f.button :submit %> -->
<% end %>
<p><a href="/achievements">Return to Index</a></p>